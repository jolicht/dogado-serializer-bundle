{
    "name": "jolicht/dogado-serializer-bundle",
    "description": "Dogado Serializer Bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jolicht\\DogadoSerializerBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jolicht\\DogadoSerializerBundle\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Johannes Lichtenwallner",
            "email": "jl@easyname.at"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "webmozart/assert": "^1.11",
        "symfony/serializer": "^6.1",
        "eventsauce/eventsauce": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-symfony": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit",
        "psalm": "./vendor/bin/psalm",
        "fix-style": "./vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "check-style": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run -v",
        "metrics": [
            "@coverage",
            "@psalm",
            "@check-style"
        ]
    }
}
